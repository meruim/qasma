{
  "redirects": [
    {
      "source": "/:path((?!.*\\.).*)",
      "destination": "/:path",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ]
}
